		"karma-chai": "^0.1.0",
		"karma-coverage": "^1.1.1",
		"karma-firefox-launcher": "^1.0.1",
		"karma-mocha": "^1.3.0",
		"mocha": "^4.0.1",
		"web-ext": "^2.2.2",
		"xo": "^0.18.2"
	},
	"nyc": {
		"reporter": [
			"lcov",
			"text"
		]
