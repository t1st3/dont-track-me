{
	"name": "dont-track-me",
	"version": "0.1.0",
	"description": "WebExtension (for Firefox/Chrome/Opera/Edge) that prevents you from being tracked by Facebook/Twitter when you browse the web.",
	"license": "MIT",
	"repository": "t1st3/dont-track-me",
	"author": {
		"name": "t1st3",
		"email": "contact@t1st3.com",
		"url": "t1st3.com"
	},
	"engines": {
		"node": ">=4"
	},
	"scripts": {
		"build": "node ./build.js && web-ext build --source-dir src",
		"lint": "web-ext lint --source-dir src",
		"test": "karma start",
		"test:watch": "karma start --no-single-run",
		"test:debug": "karma start --no-single-run --browsers Firefox"
	},
	"files": [
		"index.js"
	],
	"keywords": [
		""
	],
	"dependencies": {},
	"devDependencies": {
		"chai": "^4.1.2",
		"codecov": "^3.0.0",
		"js-beautify": "^1.7.4",
