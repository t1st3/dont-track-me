{
  "manifest_version": 2,
  "name": "dont-track-me",
  "description": "Prevent Facebook/Twitter from tracking you when you browse the web.",
  "homepage_url": "https://github.com/t1st3/dont-track-me",
  "version": "0.1.0",
  "icons": {
    "48": "icons/block.svg",
    "96": "icons/block.svg"
  },
  "applications": {
    "gecko": {
      "id": "dont-track-me@t1st3.com",
      "strict_min_version": "48.0"
    }
  },
  "background": {
    "scripts": ["dont-track-me.js", "background.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "permissions": ["storage", "webRequest", "webRequestBlocking", "<all_urls>"]
}
